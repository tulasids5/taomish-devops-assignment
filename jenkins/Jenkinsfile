pipeline {
    agent any

    environment {
        DOCKER_CREDS = credentials('dockerhub-creds')
        DOCKER_USER = "${DOCKER_CREDS_USR}"
        IMAGE_BACKEND = "${DOCKER_USER}/backend-app"
        IMAGE_FRONTEND = "${DOCKER_USER}/frontend-app"
    }

    stages {

        stage('Checkout') {
            steps {
                git 'https://github.com/tulasids5/taomish-devops-assignment.git'
            }
        }

        stage('Build Backend') {
            steps {
                dir('app/backend') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Docker Build') {
            steps {
                sh """
                docker build -t ${IMAGE_BACKEND}:v1 -f docker/Dockerfile.backend app/backend
                docker build -t ${IMAGE_FRONTEND}:v1 -f docker/Dockerfile.frontend app/frontend
                """
            }
        }

        stage('Docker Login & Push') {
            steps {
                sh """
                echo ${DOCKER_CREDS_PSW} | docker login -u ${DOCKER_USER} --password-stdin
                docker push ${IMAGE_BACKEND}:v1
                docker push ${IMAGE_FRONTEND}:v1
                """
            }
        }
    }

    post {
        success {
            echo "SUCCESS: CI/CD Complete!"
        }
        failure {
            echo "FAILED"
        }
    }
}
